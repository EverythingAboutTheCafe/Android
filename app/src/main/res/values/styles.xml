<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ImageView Style -->
    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text Style-->
    <style name="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey09</item>
    </style>

    <style name="Title.Orange">
        <item name="android:textColor">@color/orange01</item>
    </style>

    <style name="Title.Grey">
        <item name="android:textColor">@color/default_grey</item>
    </style>

    <style name="Regular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey09</item>
    </style>

    <style name="Regular.Grey">
        <item name="android:textColor">@color/default_grey</item>
    </style>

    <style name="InfoText">
        <item name="android:textColor">@color/grey03</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="InfoText.UserName">
        <item name="android:textColor">@color/grey09</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--NumberPicker Style-->
    <style name="AppTheme.NumberPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- View Style-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bg_color02</item>
    </style>

    <style name="Divider.Timeline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey01</item>
    </style>

    <style name="Divider.NumberPicker">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#CCCCCC</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/orange02</item>
        <item name="android:textCursorDrawable">@drawable/cursor_orange</item>
        <item name="android:textColorHint">@color/default_grey</item>
        <item name="android:textColorHighlight">@color/violet</item>
    </style>


</resources>