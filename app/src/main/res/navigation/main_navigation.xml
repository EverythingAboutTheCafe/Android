<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.camo.app.ui.home.HomeFragment"
        android:label="HomeFragment" />

    <fragment
        android:id="@+id/navigation_timeline"
        android:name="com.camo.app.ui.timeline.TimelineFragment"
        android:label="TimelineFragment" >
        <action
            android:id="@+id/action_navigation_timeline_to_cafeDetailFragment"
            app:destination="@id/cafeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_write"
        android:name="com.camo.app.ui.write.WriteFragment"
        android:label="WriteFragment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.camo.app.ui.profile.ProfileFragment"
        android:label="ProfileFragment" />

    <fragment
        android:id="@+id/cafeDetailFragment"
        android:name="com.camo.app.ui.timeline.cafe_detail.CafeDetailFragment"
        android:label="CafeDetailFragment" />

</navigation>