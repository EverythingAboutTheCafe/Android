<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="post"
            type="com.camo.app.model.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_timeline_user_profile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:scaleType="centerCrop"
            imageUrl="@{post.title.user.userProfileImageUrl}"
            android:contentDescription="@string/user_profile_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circle" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="8dp"
            style="@style/InfoText.UserName"
            android:text="@{post.title.user.userName}"
            app:layout_constraintStart_toEndOf="@id/iv_timeline_user_profile"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ARIA" />

        <TextView
            android:id="@+id/tv_upload_time"
            style="@style/InfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@{post.title.uploadTime}"
            app:layout_constraintBottom_toTopOf="@id/viewpager_timeline_image"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            tools:text="2시간 전" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_timeline_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="17dp"
            tools:layout="@layout/item_post_image"
            app:layout_constraintDimensionRatio="w, 0.93:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_timeline_user_profile">
        </androidx.viewpager2.widget.ViewPager2>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/viewpager_timeline_image_indicator"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/viewpager_timeline_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabBackground="@drawable/selector_viewpager_indicator"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <TextView
            android:id="@+id/tv_post_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{post.content.label}"
            style="@style/Regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewpager_timeline_image"
            tools:text="블루라떼가 맛있었다. 자리마다 콘센트 있어서 작업하기 좋음" />

        <TextView
            android:id="@+id/tv_visiting_time"
            style="@style/InfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/label_visit_time"
            app:layout_constraintStart_toStartOf="@id/tv_post_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_label" />

        <TextView
            android:id="@+id/tv_visiting_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#BDBDBD"
            android:textSize="13sp"
            android:text="@{post.content.visitTime}"
            style="@style/InfoText"
            app:layout_constraintBottom_toBottomOf="@+id/tv_visiting_time"
            app:layout_constraintStart_toEndOf="@+id/tv_visiting_time"
            tools:text="평일 오후3시" />

        <TextView
            android:id="@+id/tv_congestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_orange"
            android:paddingStart="12dp"
            android:paddingTop="3dp"
            android:paddingEnd="12dp"
            android:paddingBottom="3dp"
            android:textColor="@color/orange01"
            android:textSize="13sp"
            congestion="@{post.content.congestion}"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_visiting_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_visiting_time"
            app:layout_constraintStart_toEndOf="@+id/tv_visiting_time_value"
            tools:text="다소 혼잡" />

        <View
            android:id="@+id/bg_cafe_info"
            android:layout_width="0dp"
            android:layout_height="76dp"
            app:layout_constraintTop_toBottomOf="@id/tv_congestion"
            app:layout_constraintStart_toStartOf="@id/tv_post_label"
            app:layout_constraintEnd_toEndOf="@id/tv_post_label"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_grey" />

        <TextView
            android:id="@+id/tv_cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Title"
            android:layout_marginStart="18dp"
            android:text="@{post.cafe.cafeName}"
            app:layout_constraintStart_toStartOf="@id/bg_cafe_info"
            app:layout_constraintTop_toTopOf="@id/bg_cafe_info"
            tools:text="아너카페" />

        <TextView
            android:id="@+id/tv_cafe_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="서울시특별시 노원구 공릉동 상세주소"
            android:layout_marginBottom="16dp"
            android:text="@{post.cafe.cafeAddress}"
            style="@style/InfoText"
            app:layout_constraintTop_toBottomOf="@id/tv_cafe_name"
            app:layout_constraintStart_toStartOf="@id/tv_cafe_name"
            app:layout_constraintBottom_toBottomOf="@id/bg_cafe_info" />

        <ToggleButton
            android:id="@+id/btn_cafe_like"
            android:layout_width="22.9dp"
            android:layout_height="20.23dp"
            android:checked="@{post.cafe.cafeLike}"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:background="@drawable/selector_like_btn"
            android:layout_marginEnd="26dp"
            app:layout_constraintBottom_toBottomOf="@id/bg_cafe_info"
            app:layout_constraintTop_toTopOf="@id/bg_cafe_info"
            app:layout_constraintEnd_toEndOf="@id/bg_cafe_info" />

        <View
            android:layout_width="match_parent"
            style="@style/Divider.Timeline"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_cafe_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>