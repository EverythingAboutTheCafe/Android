<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="post"
            type="com.camo.app.model.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_timeline_user_profile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            imageUrl="@{post.title.userProfileImageUrl}"
            android:contentDescription="@string/user_profile_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circle" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="13sp"
            android:text="@{post.title.userName}"
            app:layout_constraintStart_toEndOf="@id/iv_timeline_user_profile"
            app:layout_constraintTop_toTopOf="@id/iv_timeline_user_profile"
            tools:text="ARIA" />

        <TextView
            android:id="@+id/tv_upload_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BDBDBD"
            android:textSize="13sp"
            android:text="@{post.title.uploadTime}"
            app:layout_constraintBottom_toBottomOf="@id/iv_timeline_user_profile"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            tools:text="2시간 전" />

        <ImageView
            android:id="@+id/viewpager_timeline_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintDimensionRatio="w, 0.8:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_timeline_user_profile" />


        <TextView
            android:id="@+id/tv_post_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@{post.content.label}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewpager_timeline_image"
            tools:text="블루라떼가 맛있었다. 자리마다 콘센트 있어서 작업하기 좋음" />

        <TextView
            android:id="@+id/tv_visiting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#BDBDBD"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/tv_post_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_label"
            tools:text="방문시각 :" />

        <TextView
            android:id="@+id/tv_visiting_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#BDBDBD"
            android:textSize="13sp"
            android:text="@{post.content.visitTime}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_visiting_time"
            app:layout_constraintStart_toEndOf="@+id/tv_visiting_time"
            tools:text="평일 오후3시" />

        <TextView
            android:id="@+id/tv_congestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/background_orange"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/orange"
            android:textSize="13sp"
            congestion="@{post.content.congestion}"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_visiting_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_visiting_time"
            app:layout_constraintStart_toEndOf="@+id/tv_visiting_time_value"
            tools:text="다소 혼잡" />

        <View
            android:id="@+id/bg_cafe_info"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            app:layout_constraintTop_toBottomOf="@id/tv_congestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_grey" />

        <TextView
            android:id="@+id/tv_cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:text="@{post.cafe.cafeName}"
            app:layout_constraintStart_toStartOf="@id/bg_cafe_info"
            app:layout_constraintTop_toTopOf="@id/bg_cafe_info"
            tools:text="아너카페" />

        <TextView
            android:id="@+id/tv_cafe_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="서울시특별시 노원구 궁릉동 상세주소"
            android:textSize="13sp"
            android:textColor="#BDBDBD"
            android:layout_marginBottom="15dp"
            android:text="@{post.cafe.cafeAddress}"
            app:layout_constraintTop_toBottomOf="@id/tv_cafe_name"
            app:layout_constraintStart_toStartOf="@id/tv_cafe_name"
            app:layout_constraintBottom_toBottomOf="@id/bg_cafe_info" />

        <ImageView
            android:id="@+id/iv_cafe_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_like_off_icon"
            android:layout_marginEnd="20dp"
            isLike="@{post.cafe.cafeLike}"
            app:layout_constraintBottom_toBottomOf="@id/bg_cafe_info"
            app:layout_constraintTop_toTopOf="@id/bg_cafe_info"
            app:layout_constraintEnd_toEndOf="@id/bg_cafe_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#F6F6F6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_cafe_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>